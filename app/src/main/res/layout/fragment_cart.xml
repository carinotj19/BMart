<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.Cart"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/message_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="center">

        <TextView
            android:id="@+id/header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:fontFamily="@font/poppins_regular"
            android:text="@string/cart"
            android:textColor="@color/primary"
            android:textSize="32sp"
            android:textStyle="bold"
            android:layout_marginEnd="50dp"/>

        <Button
            android:id="@+id/add_dummy_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_item" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/nothing_in_cart_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/nothing_in_cart_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nothing_in_cart"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="18sp"
            android:textColor="@android:color/darker_gray"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/cart_items"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        tools:listitem=""
        android:visibility="visible">

    </androidx.recyclerview.widget.RecyclerView>

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/cart_checkout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/cart_checkout_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/cart_totalText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/total"
                android:fontFamily="@font/poppins_bold"
                android:textSize="24sp"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:layout_marginStart="30dp"/>

            <TextView
                android:id="@+id/cart_vat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/cart_totalText"
                android:fontFamily="@font/poppins_regular"
                android:text="@string/incl_vat"
                android:textSize="14sp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"/>

            <TextView
                android:id="@+id/cart_items_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/money"
                android:fontFamily="@font/poppins_bold"
                android:textSize="24sp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="10dp"/>

        </RelativeLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">

            <Button
                android:id="@+id/cart_checkout_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/proceed_to_checkout"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="20sp"
                android:background="@drawable/rounded_button"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>