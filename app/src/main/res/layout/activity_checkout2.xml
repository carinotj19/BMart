<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.Checkout2"
    android:animateLayoutChanges="true">

    <LinearLayout
        android:id="@+id/message_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/back_icon"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@color/green_700" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:fontFamily="@font/poppins_regular"
            android:text="Checkout"
            android:textColor="@color/primary"
            android:textSize="32sp"
            android:textStyle="bold" />

    </LinearLayout>


    <View
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/background" />

    <ImageView
        android:id="@+id/maps_image"
        android:layout_width="375dp"
        android:layout_height="250dp"
        android:layout_marginTop="55dp"
        android:layout_below="@id/message_header"
        android:src="@drawable/maps"
        android:scaleType="centerCrop"
        android:layout_centerHorizontal="true"/>

    <View
        android:id="@+id/middle_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_marginTop="399dp"
        android:background="@drawable/background2" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/maps_image"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:gravity="center">

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:drawablePadding="24dp"
            android:fontFamily="@font/poppins_medium"
            android:drawableStart="@drawable/person_icon"
            android:text="Rayshine Pogi"/>

        <TextView
            android:id="@+id/phoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:drawablePadding="24dp"
            android:fontFamily="@font/poppins_medium"
            android:drawableStart="@drawable/phone_icon"
            android:text="+92312345678"/>

        <TextView
            android:id="@+id/location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:drawablePadding="24dp"
            android:fontFamily="@font/poppins_medium"
            android:drawableStart="@drawable/location_checkout_icon"
            android:text="Earth 42"/>

        <TextView
            android:id="@+id/date_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:drawablePadding="24dp"
            android:fontFamily="@font/poppins_medium"
            android:drawableStart="@drawable/time_icon"
            android:text="Test Time and Date"/>

        <Button
            android:id="@+id/confirm_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirm"
            android:layout_marginTop="15dp"
            android:background="@drawable/rounded_button"
            android:padding="12dp"/>

    </LinearLayout>
</RelativeLayout>