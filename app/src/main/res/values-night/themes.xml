<resources>
    <!-- Base application theme. -->
    <style name="Theme.BMart" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_700</item>
        <item name="colorPrimaryVariant">@color/green_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/grey_700</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="RoundCorner" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
        <item name="color">@color/white</item>
    </style>

    <style name="ToolbarColoredBackArrow" parent="">
        <item name="android:textColorSecondary">#1A5D1A</item>
    </style>

    <style name="activeIndicator">
        <item name="android:background">@color/green_700</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="inactiveIndicator">
        <item name="android:background">@color/grey_200</item>
        <item name="android:textColor">@color/green_700</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- ... -->
        <item name="borderlessSelectableItemBackground">@drawable/rounded_corner</item>
    </style>
</resources>